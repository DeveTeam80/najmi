RewriteEngine On

# User-friendly URLs
RewriteBase /
## Hide .html extension
# To externally redirect /dir/foo.html to /dir/foo
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteCond %{REQUEST_URI} !^/customised-sofas/ [NC]
RewriteRule ^ %1 [R=301,L]

# Redirect /vr and everything inside it to vr.najmigroup.co
RewriteCond %{REQUEST_URI} ^/vr(/.*)?$ [NC]
RewriteRule ^vr(/.*)?$ https://vr.najmigroup.co$1 [R=301,L]